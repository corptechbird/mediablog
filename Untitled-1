<?php

$post_type = get_post_type();
if(get_post_type() != "post"):
?>
<?php $args = array(
        'numberposts' => -1,
        'post_type' => $post_type,
        'order' => 'DESC' 
    ); ?>
<?php

// The Query
$the_query = new WP_Query( $args );

// The Loop
if ( $the_query->have_posts() ) {
	echo '<ul style="margin-bottom:30px;">';
	while ( $the_query->have_posts() ) {
		$the_query->the_post();
		echo '<li style="border-bottom: 1px solid #d7d7d7;">' . get_the_title() . '</li>';
	}
	echo '</ul>';
	wp_reset_postdata();
} else {
}
?>
<ul style="margin-bottom:30px;">
    <?php $args = array(
        'numberposts' => -1,
        'post_type' => $post_type,
        'order' => 'DESC' 
    );
    $posts = get_posts( $args );
    if( $posts ) : foreach( $posts as $post) : setup_postdata( $post ); ?>
        <li style="border-bottom: 1px solid #d7d7d7;">
            <a href="<?php the_permalink(); ?>" title="<?php the_title_attribute(); ?>"><?php echo get_the_title(); ?></a>
        </li>
    <?php endforeach; ?>
    <?php endif;
    wp_reset_postdata(); ?>
</ul>
<?php endif; ?>
